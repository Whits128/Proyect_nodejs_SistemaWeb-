

<script  type="module" src="/js/ModulosJS/ModulosJSBodega.js"></script>

    



    <section  class="content">
 
        
               
         
        <div class="row center mb-3 botones_Cart"  >
            <% if (allowedActions.some(accion => accion.Accion === 'Crear')) { %>
                <button id="btnCrear" class="btn btn-dark Boton_crearPrincipal" >Crear</button>
            <% } %>
        </div>
    
                <!-- Visualización de DataTables -->
                <div class="row  p-3 ">
                    <div class="table-container">
                        <table id="Tabla" class="custom-table" data-allowed-actions='<%- JSON.stringify(allowedActions) %>' >
                            <!-- Encabezados de la Tabla -->
                            <thead>
                                <tr>
                                    <th>CODIGO</th>
                                    <th>NOMBRE</th>
                                    <th>UBICACION</th>
                                    <th>ESTADO</th>                                  
                                    <th class="text-center">ACCIONES</th>
                                </tr>
                            </thead>
                            <tbody></tbody> <!-- El Cuerpo de la Tabla se Poblará Dinámicamente -->
                        </table>
                    </div>
                </div>
 
    
            <!-- Modal para Operaciones CRUD -->
            <div id="modalCRUD" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="error-container"></div>

                <div class="modal-dialog" role="document"> 
                    <div class="modal-content" style="width: 600px;">
                        <!-- Encabezado del Modal -->
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel"></h5>
                        </div>
    
                        <!-- Formulario en el Modal -->
                        <form id="form">
                            <!-- Cuerpo del Modal -->
                            <div class="modal-body form">
                                <!-- Campos del Formulario -->
                                <input id="id" hidden>
                                <div class="input-container">
                                    <input placeholder="" type="text"  id="nombre">
                                    <label for="nombre" class="label">Nombre</label>
                                    <div class="underline"></div>
                                </div>
                                <div class="input-container">
                                    <input placeholder="" type="text" id="ubicacion">
                                    <label for="ubicacion" class="label">Ubicacion</label>
                                    <div class="underline"></div>
                                </div>
                                <div class="input-container">
                                    <select id="estado" >
                                        <option value="Activo">Activo</option>
                                    </select>
                                    <label for="estado" class="label">Estado</label>
                                    <div class="underline"></div>
                                </div>
                            </div>
    
                            <!-- Pie del Modal con Botones de Cancelar y Guardar -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <button type="submit" id="btnGuardar" class="btn btn-dark">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

       
    </section>





