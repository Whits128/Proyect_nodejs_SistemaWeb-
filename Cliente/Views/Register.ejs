<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration Form</title>
    <link rel="stylesheet" href="/css/Register.css">
</head>
<body>
    <div class="form">
        <div class="title">User Registration</div>
  
        <div class="input-container ic1">
          <input placeholder="" type="text" class="input" id="firstname">
          <div class="cut"></div>
          <label class="iLabel" for="firstname">First Name</label>
        </div>
  
        <div class="input-container ic2">
          <input placeholder="" type="text" class="input" id="lastname">
          <div class="cut"></div>
          <label class="iLabel" for="lastname">Last Name</label>
        </div>
        
        <div class="input-container ic3">
          <input placeholder="" type="text" class="input" id="loginUsuario">
          <div class="cut cut-short"></div>
          <label class="iLabel" for="loginUsuario">Login Username</label>
        </div>

        <div class="input-container ic4">
          <input placeholder="" type="password" class="input" id="loginClave">
          <div class="cut cut-short"></div>
          <label class="iLabel" for="loginClave">Login Password</label>
        </div>
        
        <div class="input-container ic5">
          <select class="input" id="idRol">
            <option value="1">Administrator</option>
            <option value="2">Regular User</option>
          </select>
          <label class="iLabel" for="idRol">Role</label>
        </div>

        <div class="input-container ic6">
          <select class="input" id="activo">
            <option value="1">Active</option>
            <option value="0">Inactive</option>
          </select>
          <label class="iLabel" for="activo">Status</label>
        </div>
        
        <button class="submit" type="button" onclick="registerUser()">Submit</button>
    </div>

    <script>
