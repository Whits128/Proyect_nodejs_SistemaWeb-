        <div id="vistaCUser3" class="vista">
              <!-- Inputs -->
              <div class="row">
        
                <!-- Botón -->
          
                <div class="col  justify-content-end">
                    <button id="btnMostrarLista" type="button" class="btn btn-primary me-2">Mostrar Lista</button>
                    <button  id="btnIrVista1"  class="btn btn-primary ms-2">Ir a la Vista 1</button>
                </div>
                
              

           </div>
           <!--Aqui mostraremos la lista dinamica -->
           <div id="listaSeciones" class="row justify-content-center">
            <div class="col-md-6 mx-auto" id="listaDinamicaContainer">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="text-center">Título de la Lista</h4>
                    <button id="cerrarLista" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i>
                    </button>
